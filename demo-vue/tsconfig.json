{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom", "es2015"
    ],
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ]
     },
    "typeRoots": [
      "types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "app",
    "types"
  ],
  "exclude": [
    "node_modules",
    "platforms"
  ]
}
