{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2016"],
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
